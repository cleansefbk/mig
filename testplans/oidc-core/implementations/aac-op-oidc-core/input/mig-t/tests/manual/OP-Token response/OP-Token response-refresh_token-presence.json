{
  "test suite": {
    "name": "Single test",
    "description": "One test only",
    "filter messages": true
  },
  "tests": [
    {
      "test": {
        "name": "Does the OP issue the refresh tokens when requested",
        "description": "In this test an RP makes an authentication request with scope \"offline_access\". Once received the code, the RP tries to exchange it in the token endpoint and the response must contain the refresh token.",
        "type": "active",
        "sessions": [
          "s1"
        ],
        "operations": [
          {
            "session": "s1",
            "action": "start"
          },
          {
            "action": "intercept",
            "from session": "s1",
            "then": "forward",
            "message type": "Authentication request",
            "decode operations": [
              {
                "from": "url",
                "decode param": "request",
                "type": "jwt",
                "edits": [
                  {
                    "jwt from": "payload",
                    "jwt edit": "$.acr_values",
                    "value": "https://www.spid.gov.it/SpidL1"
                  },
                  {
                    "jwt sign": "X_key_core_RP"
                  }
                ]
              }
            ]
          },
          {
            "action": "intercept",
            "from session": "s1",
            "then": "forward",
            "message type": "Token response",
            "checks": [
              {
                "in": "body",
                "check": "refresh_token",
                "is present": "true"
              }
            ]
          }
        ],
        "result": "correct flow s1"
      }
    }
  ]
}