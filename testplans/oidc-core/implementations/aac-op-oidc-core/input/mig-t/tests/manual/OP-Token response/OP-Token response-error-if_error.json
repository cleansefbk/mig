{
  "test suite": {
    "name": "Single test",
    "description": "One test only",
    "filter messages": true
  },
  "tests": [
    {
      "test": {
        "name": "Does the error token response have error parameter",
        "description": "This test verifies the presence of error parameter in the error token response.",
        "type": "active",
        "sessions": [
          "s1"
        ],
        "operations": [
          {
            "session": "s1",
            "action": "start"
          },
          {
            "action": "intercept",
            "from session": "s1",
            "then": "forward",
            "message type": "Token request",
            "message operations": [
              {
                "from": "body",
                "in": "https://www.example.com/",
                "edit regex": "(?<=client_id=)([^&]+)"
              }
            ]
          },
          {
            "action": "intercept",
            "from session": "s1",
            "then": "forward",
            "message type": "Token response",
            "checks": [
              {
                "in": "body",
                "check regex": "error"
              }
            ]
          }
        ],
        "result": "assert_only"
      }
    }
  ]
}